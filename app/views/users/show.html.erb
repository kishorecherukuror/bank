  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<% if @user.accounts.present? %>

<h3>Account Details</h3>
<table width="50%" class="table table-bordered">
<tr>
  <th>Account Number</th>
  <th>Account Type</th>
  <th>Branch</th>
  <th>Amount</th>  
</tr>
  <% @user.accounts.each do  |acc|%>
 <tr>
    <td><%= acc.account_number %> </td>
    <td><%= acc.account_type %> </td>
    <td><%= acc.branch.area %></td>
    <td><%= acc.amount %></td>    
 </tr>
  <% end %>
</table>
<br/>

<p><%= link_to "Add More Account", accounts_path(@user) %></p>
<% end %>

