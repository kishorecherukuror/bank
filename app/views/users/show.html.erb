<p>
  <strong>Fname:</strong>
  <%= @user.fname %>
        <span style="float:right;width: 30%;">
            <%= image_tag @user.photo.url(:medium) %>
        </span>
</p>

<p>
  <strong>Lname:</strong>
  <%= @user.lname %>
</p>

<p>
  <strong>Ful name:</strong>
  <%= @user.ful_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% #= image_tag @user.photo.url %>
<% #= #image_tag @user.photo.url(:thumb) %>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
