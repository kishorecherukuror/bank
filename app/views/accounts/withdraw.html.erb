<%= form_tag do %>
 <div class="form-group row">
	<label class="col-xs-2 col-form-label">Account Number:</label>
	<div class="col-xs-3">
	<%= select_tag "account",  options_from_collection_for_select(@account, "id", "account_number") , :include_blank  => true, class: 'form-control' %>
	</div>
 </div>
 <div class="form-group row">	
	<label class="col-xs-2 col-form-label">Amount:</label>
	<div class="col-xs-3">	
	<%= text_field_tag "amount", '', class: 'form-control' %><%= hidden_field_tag :id, nil, value: params[:id] %>
	</div>
 </div>
 
<div class="form-group row">
	<div class="offset-sm-2 col-sm-10">
<%= submit_tag "Withdraw Amount", class: 'btn btn-primary' %>
</div>
</div>

<% end %>